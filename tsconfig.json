{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}